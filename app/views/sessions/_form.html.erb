<%= form_with(model: user, class: "contents", url: sessions_path(@user)) do |form| %>
  <% if flash[:alert].present? %>
    <span id="alert"><%= flash[:alert] %></span>
  <% end %>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit 'Login', class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
